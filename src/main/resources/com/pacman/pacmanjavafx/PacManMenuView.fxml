<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.pacman.pacmanjavafx.PacManMenuController"
            stylesheets="@css/style.css"
            prefHeight="1080" prefWidth="1920" >

    <StackPane fx:id="stackPane" prefHeight="1080" prefWidth="1920">
        <VBox fx:id="vbox" alignment="CENTER" spacing="20">
            <Label text="Cookie Collector" style="-fx-font-size: 70px; -fx-text-fill: yellow;"
                   styleClass="custom-font"/>
            <Text fx:id="highscoreText" text="Highscore: " style="-fx-font-size: 20px; -fx-text-fill: white;"
                  styleClass="custom-font"/>
            <Button fx:id="startButton" text="Start Game" onAction="#onStartButtonClicked"
                    style="-fx-background-color: transparent; -fx-font-size: 40px; -fx-text-fill: white;"
                    styleClass="custom-font"/>
            <Button fx:id="exitButton" text="Exit Game" onAction="#onExitButtonClicked"
                    style="-fx-background-color: transparent; -fx-font-size: 40px; -fx-text-fill: white;"
                    styleClass="custom-font"/>
        </VBox>
    </StackPane>
</AnchorPane>
